@model Demo.Models.ChangeProfile

@{
    ViewData["Title"] = "ChangeProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>ChangeProfile</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeProfile" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreviousPassword" class="control-label"></label>
                <input asp-for="PreviousPassword" class="form-control" />
                <span asp-validation-for="PreviousPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label asp-for="BecomeAsSeller" class="control-label"></label>
                <input type="checkbox" asp-for="BecomeAsSeller" class="form-check-input" />
                <span asp-validation-for="BecomeAsSeller" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
